{
  "name": "Jekyll",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [
    // Jekyll server
    4000,
    // Live reload server
    35729
  ],
  "postCreateCommand": "sh .devcontainer/post-create.sh",
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "extensions": [
        "EditorConfig.EditorConfig",
        "yzhang.markdown-all-in-one"
      ]
    }
  }
}